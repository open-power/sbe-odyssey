# Exit if any command fails
set -e

source public/src/tools/utils/sbe/sbe-workon-utils

if [ -e `pwd`/internal ]; then
    . `pwd`/internal/sbeutils.sh
fi

SUPPORTED_PLATFORM=("pst" "odyssey" ${INT_SUPPORTED_PLATFORM[*]} "all")
SUPPORTED_IMAGES=("sppe" "bldr" "srom" "otprom" "tsbe" "hsbe" ${INT_SUPPORTED_IMAGES[*]} "pseeprom" "pnor" "all")
SUPPORTED_COMMAND=("workon" "prime" "install" "citest" "runsimics" "build" \
                   "clean" "execute" "printenv" "cronus_devready" "runtest")

