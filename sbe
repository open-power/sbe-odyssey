sbe_workon()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon."
        exit 1
    else
        export SBE_INSIDE_WORKON=1

        if [ -z "$1" ]; then
            echo "***INFO | Platform arg missing. Setting to default all"
            export SBE_PLATFORM=all
        else
            for PLATFORM in ${SUPPORTED_PLATFORM[@]}; do
                if [ "$PLATFORM" == "$1" ]; then
                    export SBE_PLATFORM=$1
                    echo "***INFO | Platform is $SBE_PLATFORM"
                    break
                fi
            done
        fi

        if [ -z "$2" ]; then
            echo "***INFO | Image arg missing. Setting to default all"
            export SBE_IMAGE=all
        else
            for IMAGE in ${SUPPORTED_IMAGES[@]}; do
                if [ "$IMAGE" == "$2" ]; then
                    export SBE_IMAGE=$2
                    echo "***INFO | Image type is $SBE_IMAGE"
                    break
                fi
            done
        fi

        if [ -z "$SBE_PLATFORM" ]; then
            echo "***ERROR | Un-Supported platform type $1"
            echo "***ERROR | Supported Platforms : [<${SUPPORTED_PLATFORM[*]}>]"
            echo "***ERROR | Exiting...."
            exit 1
        fi

        if [ -z "$SBE_IMAGE" ]; then
            echo "***ERROR | Un-Supported image type $2"
            echo "***ERROR | Supported Images : [<${SUPPORTED_IMAGES[*]}>]"
            echo "***ERROR | Exiting...."
            exit 1
        fi

        # calling fucntion for swaping new shell
        swapingNewShell

    fi
}

sbe_install()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        installRequiredPackages
    else
        echo "Please do workon and re launch..."
    fi

}

sbe_prime()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        ${SBE_TOOLS_PATH}/sbePrime.py $* || exit 1
    else
        echo "Please do workon and re launch..."
    fi

}

sbe_citest()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        ${SBE_CITEST_PATH}/ci_script $*
    else
        echo "Please do workon and re launch..."
    fi

}

sbe_run_simics()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"

        sbe_prime || exit 1

        cd simics

        if [[ "till_boot" == $1 ]]; then
            TILL_BOOT=true
        else
            TILL_BOOT=false
        fi
        $SBEROOT/internal/src/tools/simics/runsimicscmd.sh -p $SBE_PLATFORM \
                -i $SBE_IMAGE -r $TILL_BOOT
    else
        echo "Please do workon and re launch..."
    fi

}

sbe_build()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        if [ ! -f "builddir/build.ninja" ]; then
            mesonwrap setup || exit 1
        fi

        mesonwrap build || exit 1
    else
        echo "Please do workon and re launch..."
    fi
}

sbe_clean()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        mesonwrap clean
    else
        echo "Please do workon and re launch..."
    fi
}

sbe_execute()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        sbe_build || exit 1
        sbe_prime || exit 1
        sbe_run_simics $1
    else
        echo "Please do workon and re launch..."
    fi
}

sbe_print_env()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        echo "SBEROOT                   = $SBEROOT"
        echo "SBE_PLATFORM              = $SBE_PLATFORM"
        echo "SBE_IMAGE                 = $SBE_IMAGE"
        echo "PYTHON_USER_PACKAGE_PATH  = $PYTHON_USER_PACKAGE_PATH"
    else
        echo "Please do workon and re launch..."
    fi
}

sbe_cronus_devready()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"
        export PERLMODULES=$SBEROOT_INT/src/tools/perlTools
        ($PERLMODULES/cronusDevTool $*) || exit 1
    else
        echo "Please do workon and re launch..."
    fi
}

# This is for enabling bash completion
generate_list()
{
    mkdir -p ${HOME}/.sbe
    echo ${SUPPORTED_COMMAND[*]} > ${HOME}/.sbe/cmd_list.dat
    echo ${SUPPORTED_PLATFORM[*]} > ${HOME}/.sbe/plat_list.dat
}

sbe_runtest()
{
    if [ -n "${SBE_INSIDE_WORKON}" ]; then
        echo "Already in a workon.. Continuing"

        IMAGES_DIR=$1 sbe_prime || exit 1

        cd simics

        $SBEROOT/internal/src/tools/simics/runsimicscmd.sh -p $SBE_PLATFORM \
                -i $SBE_IMAGE -c true -r false || exit 1
    else
        echo "Please do workon and re launch..."
    fi

}

FIRST_PARAM=$1
shift

case ${FIRST_PARAM} in
${SUPPORTED_COMMAND[0]})
    sbe_workon $*
    ;;
${SUPPORTED_COMMAND[2]})
    sbe_install $*
    ;;
${SUPPORTED_COMMAND[1]})
    sbe_prime $*
    ;;
${SUPPORTED_COMMAND[3]})
    sbe_citest $*
    ;;
${SUPPORTED_COMMAND[4]})
    sbe_run_simics $*
    ;;
${SUPPORTED_COMMAND[5]})
    sbe_build $*
    ;;
${SUPPORTED_COMMAND[6]})
    sbe_clean $*
    ;;
${SUPPORTED_COMMAND[7]})
    sbe_execute $*
    ;;
${SUPPORTED_COMMAND[8]})
    sbe_print_env $*
    ;;
${SUPPORTED_COMMAND[9]})
    sbe_cronus_devready $*
    ;;
${SUPPORTED_COMMAND[10]})
    sbe_runtest "$@"
    ;;
# This is not to be printed in completion, so no need to add in SUPPORTED_COMMAND
gen_list)
    generate_list $*
    ;;
*)
    sbe_helptext $*
    ;;
esac
