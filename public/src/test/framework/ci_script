# This script will be called by ./sbe script after a workon

# Install required python modules and application

usage()
{
    echo "Usage: $0 [--skip-tests]"
    exit 1
}

rm -rf builddir/ genfiles/ images/ simics/sbe/

source ./env.bash || exit 1

# Build the Repo
echo "===============Meson setup================"
mesonwrap setup || exit 1
echo "===============Meson build================"
mesonwrap build || exit 1

# Check if test's should be run or not. Default is run.
if [ $# -ne 0 ]; then
    if [ "$1" == "--skip-tests" ]; then
        echo "Skipping tests due to --skip-tests"
        exit 0
    fi

    usage
fi

#TODO: need to enable PST SEEPROM CI and remove the if else condition
if [[ $SBE_IMAGE == "pseeprom" || $SBE_IMAGE == "all" || "$SBE_PLATFORM" == "metis" || "$SBE_PLATFORM" == "all" ]]; then
    echo "Skipping tests. Simics is not supported for CI run. Selected Platform: $SBE_PLATFORM, Image Type: $SBE_IMAGE "
else
    # Add SBE files to simics sandbox.
    sh ${SBE_TOOLS_PATH}/setup_simics $SBEROOT/simics || exit 1

    # Run simics testcases
    sh ${SBE_TOOLS_PATH}/autocitest || exit 1
fi
